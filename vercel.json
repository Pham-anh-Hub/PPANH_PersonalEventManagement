{
  "builds": [
    {
      "src": "client/vite.config.ts",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist"
      }
    }
  ],
  "outputDirectory": "client/dist",
  "framework": "vite",
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/dist",
  "ignoreCommand": "cd client && git diff --quiet HEAD^ HEAD .",
  "routes": [
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
